[bakker]
api_url = "http://localhost:3500"
timeout_seconds = 30

[defaults]
output = "table"
confirm_import = true
# Optional default destination profile for imports.
# profile = "local_dev"

[profiles.local_dev]
host = "127.0.0.1"
port = 3306
user = "restore_user"
database = "app_local"
# Optional: store destination DB password in config.
# Env var <PROFILE>_DB_PASS still overrides this value.
# password = "change-me"

[profiles.staging]
host = "staging-db.internal"
port = 3306
user = "restore_user"
database = "app_staging"
# password = "change-me"
